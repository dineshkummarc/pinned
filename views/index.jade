.pins
  - each pin in pinned
    div(class="pin pin-" + pin.id + " module")
      div
        a(href=pin.href, target=pin.target)
          span.title #{pin.title}
      div.module-footer
        a(href=pin.href, target=pin.target) #{pin.date}
.filters
  .module
    div
      h4 Tags
    .group
      - each tag in tags
        - if (tag.selected)
          a.tag.selected(href=tag.url) #{tag.value}
        - if (!(tag.selected))
          a.tag(href=tag.url) #{tag.value}
  .categories
